<% provide(:title, 'Gadgets') %>

<h1>Gadgets</h1>

<table>
  <tr>
    <th>Label</th>
    <th>Icon</th>
    <th>Description</th>
    <th>Position</th>
    <th>User</th>
    <th>Gadget type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gadgets.each do |gadget| %>
  <tr>
    <td><%= gadget.label %></td>
    <td><%= gadget.icon %></td>
    <td><%= gadget.description %></td>
    <td><%= gadget.position %></td>
    <td><%= gadget.user_id %></td>
    <td><%= gadget.gadget_type_id %></td>
    <td><%= link_to 'Show', gadget %></td>
    <td><%= link_to 'Edit', edit_gadget_path(gadget) %></td>
    <td><%= link_to 'Destroy', gadget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user and current_user.admin? %>
    <%= link_to 'Add Gadget', new_gadget_path %>
<% end %>
