<% provide(:title, @gadget.name) %> 
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= render 'icon', gadget: @gadget %>
        <%= @gadget.name %>
      </h1>
    </section>
    <span><%= pluralize(@menu_categories.count, "menu category") %></span>
  </aside>
  <div class="span8">
    <%= render @gadget.type.downcase %>
  </div>
</div>
<span><%= link_to "Edit Gadget Info", edit_gadget_path %></span>
<span class="back-link"> | <%= link_to "Back", @gadget.app %></span>
